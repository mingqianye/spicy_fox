<h1>Listing houses</h1>

<table>
  <thead>
    <tr>
      <th>Rent</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>User</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.rent %></td>
        <td><%= house.longitude %></td>
        <td><%= house.latitude %></td>
        <td><%= house.user %></td>
        <td><%= house.address %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path %>
